
@model Author
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Author</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="AuthorName">AuthorName *</label>
                    <input type="text" class="form-control" asp-for="AuthorName" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bg bi-save"></i> Save</button>
                    <a href="/Author/GetAll" class="btn btn-primary"><i class="bg bi-list"></i> List</a>
                 </div>
               
            </form>
        </div>
    </div>
</div>

